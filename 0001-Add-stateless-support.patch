From: "Brett T. Warden" <brett.t.warden@intel.com>
Date: Wed, 5 Jun 2019 09:30:35 -0700
Subject: [PATCH] Add stateless support

---
 configure            | 2 +-
 doc/Makefile.in      | 2 +-
 sanei/sanei_config.c | 2 +-
 3 files changed, 3 insertions(+), 3 deletions(-)

diff --git a/configure b/configure
index 216aaea..70fb8e8 100755
--- a/configure
+++ b/configure
@@ -20581,7 +20581,7 @@ fi
 
 
 
-configdir="${sysconfdir}/sane.d"
+configdir="${sysconfdir}/sane"
 
 
 
diff --git a/doc/Makefile.in b/doc/Makefile.in
index d678cf1..4975aaa 100644
--- a/doc/Makefile.in
+++ b/doc/Makefile.in
@@ -939,7 +939,7 @@ all: bemans $(API_SPECS) html-pages
 %.1 %.5 %.7 %.8: %.man
 	@echo "Generating manpage $@...";
 	@sed -e 's|@DATADIR@|$(datadir)|g' \
-	  -e 's|@CONFIGDIR@|$(configdir)|g' \
+	  -e 's|@CONFIGDIR@|/etc/sane.d|g' \
 	  -e 's|@DOCDIR@|$(docdir)|g' \
 	  -e 's|@LIBDIR@|$(libdir)/sane|g' \
 	  -e 's|@BINDIR@|$(bindir)|g' \
diff --git a/sanei/sanei_config.c b/sanei/sanei_config.c
index c158766..1b5c0bc 100644
--- a/sanei/sanei_config.c
+++ b/sanei/sanei_config.c
@@ -67,7 +67,7 @@
 # define PATH_SEP	'/'
 #endif
 
-#define DEFAULT_DIRS	"." DIR_SEP STRINGIFY(PATH_SANE_CONFIG_DIR)
+#define DEFAULT_DIRS	"." DIR_SEP "/etc/sane.d" DIR_SEP STRINGIFY(PATH_SANE_CONFIG_DIR)
 
 #ifdef __BEOS__
 #include <FindDirectory.h>
